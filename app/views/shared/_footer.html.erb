<footer aria-label="SoulShare Footer" class="bg-white p-6 w-full fixed bottom-0 shadow-md border border-gray-200">
  <div class="container mx-auto px-4 flex flex-col sm:flex-row justify-between items-center sm:items-start gap-y-4 text-sm text-gray-600">
    <div class="flex gap-4 text-lg text-center sm:text-left">
      <%= link_to "Home", root_path, class: "hover:text-sky-800 transition" %>
      <%= link_to "Events", events_path, class: "hover:text-sky-800 transition" %>
      <%= link_to "Songs", songs_path, class: "hover:text-sky-800 transition" %>
    </div>

    <p class="text-center text-sm text-gray-500 sm:text-left">
      &copy; <%= Time.current.year %>. All rights reserved.
    </p>

    <ul class="flex justify-center sm:justify-start gap-6">
      <li>
        <a href="#" rel="noreferrer" target="_blank" class="transition hover:opacity-75">
          <%= inline_svg "icons/facebook.svg", class: "h-6 w-6 text-sky-700 hover:text-sky-700/75" %>
        </a>
      </li>

      <li>
        <a href="#" rel="noreferrer" target="_blank" class="transition hover:opacity-75">
          <%= inline_svg "icons/instagram.svg", class: "h-6 w-6 text-sky-700 hover:text-sky-700/75" %>
        </a>
      </li>

      <li>
        <a href="#" rel="noreferrer" target="_blank" class="transition hover:opacity-75">
          <%= inline_svg "icons/twitter.svg", class: "h-6 w-6 text-sky-700 hover:text-sky-700/75" %>
        </a>
      </li>

      <li>
        <a href="#" rel="noreferrer" target="_blank" class="transition hover:opacity-75">
          <%= inline_svg "icons/github.svg", class: "h-6 w-6 text-sky-700 hover:text-sky-700/75" %>
        </a>
      </li>
    </ul>
  </div>
</footer>
