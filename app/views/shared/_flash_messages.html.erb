<% flash.each do |type, message| %>
  <div class="relative px-4 py-3 mb-4 
    <%= 'text-green-700 bg-green-100 border-green-400' if type == 'notice' %>
    <%= 'text-red-700 bg-red-100 border-red-400' if type == 'alert' %>
    <%= 'text-blue-700 bg-blue-100 border-blue-400' if type == 'info' %>
    <%= 'text-yellow-700 bg-yellow-100 border-yellow-400' if type == 'warning' %>
    rounded">
    <%= message %>
  </div>
<% end %>