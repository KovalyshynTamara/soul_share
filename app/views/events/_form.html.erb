<div class="container flex justify-center">
  <div class="form-container">
    <% if event.errors.any? %>
      <div class="bg-red-300 text-red-800 p-4 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(event.errors.count, "error") %> can't save event:</h3>
        <ul class="list-disc ml-5">
          <% event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with(model: event, local: true, class: "space-y-4") do |f| %>
      <div>
        <%= f.label :title, class: "form__label" %>
        <%= f.text_field :title, class: "form__input" %>
      </div>

      <div>
        <%= f.label :description, class: "form__label" %>
        <%= f.text_area :description, class: "form__input" %>
      </div>

      <div>
        <%= f.label :location_id, "Location", class: "form__label" %>
        <%= f.collection_select :location_id, Location.all, :id, :name, { prompt: "Select a location" }, class: "form__input" %>
      </div>

      <div>
        <%= f.label :start_at, "Start time", class: "form__label"  %>
        <%= f.datetime_select :start_at, class: "w-full p-2 border rounded" %>
      </div>

      <div>
        <%= f.label :end_at, "End time", class: "form__label" %>
        <%= f.datetime_select :end_at, class: "w-full p-2 border rounded" %>
      </div>

      <%= f.submit class: "btn btn__primary" %>
    <% end %>
  </div>
</div>