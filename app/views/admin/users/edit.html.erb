<div class="container max-w-3xl mx-auto p-10 bg-white rounded-xl shadow mb-24">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">User Details</h1>

  <%= form_with(model: [:admin, @user], local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, "Name", class: "block font-semibold text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, "Email", class: "block font-semibold text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Save Changes", class: "btn btn__primary" %>
      <%= link_to 'Back to Users', admin_users_path, class: "btn btn__secondary" %>
    </div>
  <% end %>

  <div class="mt-6 text-sm text-gray-500">
    Created at: <%= @user.created_at.strftime("%Y-%m-%d %H:%M") %>
  </div>
</div>
