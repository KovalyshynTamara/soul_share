<div class="container max-w-2xl mx-auto p-4 bg-white rounded-xl shadow mb-20">

  <%= render "rating", song: @song %>

  <h1 class="text-2xl font-bold mb-4 text-violet-900 mr-4"><%= @song.title %></h1>  
  <div class="title">Author:
    <span class="text-gray-700 font-medium"><%= @song.author %></span>
  </div>
  <div class="title">Genre:
    <span class="text-gray-700 font-medium"><%= @song.genre.presence || "N/A" %></span>
  </div>
  <div class="title">Lyrics:</div>
  <pre class="bg-gray-100 p-3 rounded whitespace-pre-wrap"><%= @song.lyrics %></pre>

  <div class="flex gap-4 mt-6">
    <%= link_to "Edit", edit_song_path(@song), class: "btn btn__primary" %>
    <%= button_to "Delete", song_path(@song), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?"  }, class: "btn btn__pink" %>
    <%= link_to "Back", songs_path, class: "btn btn__secondary" %>
  </div>
</div>