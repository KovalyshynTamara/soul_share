<div class="container mb-20">
  <h1 class="text-2xl font-bold mb-4">All Songs</h1>

   <div class="mb-6">
    <%= link_to "+ New Song", new_song_path, class: "btn btn__pink" %>
  </div>
  <% if @songs.any? %>
    <ul class="space-y-4 mb-6">
      <% @songs.each do |song| %>
        <li class="p-4 bg-white shadow rounded-lg">
          <div class="flex justify-between items-center">
            <div>
              <h2 class="text-xl font-semibold text-blue-600">
                <%= link_to song.title, song_path(song), class: "hover:underline" %>
              </h2>
              <p class="text-gray-600">Author: <%= song.author %></p>
              <p class="text-gray-500">Genre: <%= song.genre || "N/A" %></p>
            </div>

            <div class="flex gap-4">
              <%= link_to "Edit", edit_song_path(song), class: "btn btn__primary" %>
              <%= button_to "Delete", song_path(song), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn__pink" %>

            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No songs available.</p>
  <% end %>

</div>