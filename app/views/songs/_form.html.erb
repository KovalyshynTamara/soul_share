<div class="container flex justify-center pb-20">
  <div class="form-container">
    <% if @song.errors.any? %>
      <div class="bg-red-300 text-red-800 p-4 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(@song.errors.count, "error") %> can't save songs:</h3>
        <ul class="list-disc ml-5">
          <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @song, local: false do |f| %>
      <div>
        <%= f.label :title, "Song Title", class: "form__label" %>
        <%= f.text_field :title, class: "form__input" %>
      </div>

      <div>
        <%= f.label :author, "Author", class: "form__label" %>
        <%= f.text_field :author, class: "form__input" %>
      </div>

      <div>
        <%= f.label :genre, "Genre", class: "form__label" %>
        <%= f.text_field :genre, class: "form__input" %>
      </div>

      <div>
        <%= f.label :lyrics, "Lyrics", class: "form__label" %>
        <%= f.text_area :lyrics, class: "form__input" %>
      </div>

      <div>
        <%= f.submit class: "btn btn__primary" %>
      </div>
    <% end %>
  </div> 
 </div>